generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  username String @unique
  name String
  senha String

  restaurants Restaurant[]
  ratings Rating[] 
  menus Menu[]
}

model Restaurant {
  id Int @default(autoincrement()) @id
  name String
  address String
  description String
  phone String

  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  menu Menu[]

  ratings Rating[]
}

model Rating {
  id Int @default(autoincrement()) @id
  stars Int
  description String?

  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  restaurantId Int
  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
}

model Menu {
  id Int @default(autoincrement()) @id

  name String

  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  restaurantId Int @unique
  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  menuItems MenuItem[]
}

model MenuItem {
  id Int @default(autoincrement()) @id

  menuId Int
  menu Menu @relation(fields: [menuId], references: [id], onDelete: Cascade)

  name String
  desc String
  price Int

}